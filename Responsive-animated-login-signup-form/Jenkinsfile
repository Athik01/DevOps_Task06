pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "mohamedathikr/my-node-app:latest"
        K8S_DEPLOYMENT = "Responsive-animated-login-signup-form/k8s/node-app-deployment.yaml"
        K8S_SERVICE = "Responsive-animated-login-signup-form/k8s/node-app-service.yaml"
    }

    stages {
        stage('Cleanup Workspace') {
            steps {
                echo "ğŸ§¹ Cleaning workspace..."
                cleanWs()
            }
        }

        stage('Clone Repository') {
            steps {
                echo "ğŸ“¥ Cloning repository..."
                git branch: 'main', url: 'https://github.com/Athik01/DevOps_Task06.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "ğŸ³ Building Docker Image: $env.DOCKER_IMAGE"
                    powershell """
                        echo 'ğŸš€ Starting Docker Build...'
                        docker build -t $env:DOCKER_IMAGE -f Responsive-animated-login-signup-form/Dockerfile Responsive-animated-login-signup-form/
                    """
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    echo "ğŸ“¤ Pushing Docker Image to Docker Hub..."
                    withDockerRegistry([credentialsId: 'docker-hub-credentials', url: '']) {
                        powershell """
                            echo 'ğŸ”„ Logging in to Docker Hub...'
                            docker login -u mohamedathikr -p \$env:DOCKER_PASSWORD
                            echo 'ğŸš€ Pushing Image: $env:DOCKER_IMAGE'
                            docker push $env:DOCKER_IMAGE
                        """
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                powershell """
                    echo 'ğŸš€ Deploying to Kubernetes...'
                    kubectl apply -f $env:K8S_DEPLOYMENT
                    kubectl get pods
                """
            }
        }

        stage('Verify Deployment') {
            steps {
                script {
                    echo "ğŸ” Verifying Kubernetes Deployment..."
                    powershell """
                        echo 'ğŸ“Œ Listing Pods...'
                        kubectl get pods
                        echo 'ğŸ“Œ Listing Services...'
                        kubectl get svc
                    """
                }
            }
        }
    }

    environment {
        DOCKER_PASSWORD = credentials('docker-hub-password')
    }
}

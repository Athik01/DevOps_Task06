pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "mohamedathikr/my-node-app:latest"
        K8S_DEPLOYMENT = "Responsive-animated-login-signup-form/k8s/node-app-deployment.yaml"
    }

    stages {
        stage('Cleanup Workspace') {
            steps {
                echo "ğŸ§¹ Cleaning workspace..."
                cleanWs()
            }
        }

        stage('Clone Repository') {
            steps {
                echo "ğŸ“¥ Cloning repository..."
                git branch: 'main', url: 'https://github.com/Athik01/DevOps_Task06.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "ğŸ³ Building Docker Image: $DOCKER_IMAGE"
                    powershell """
                        echo 'ğŸš€ Starting Docker Build...'
                        docker build -t $DOCKER_IMAGE -f Responsive-animated-login-signup-form/Dockerfile Responsive-animated-login-signup-form/
                    """
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    echo "ğŸ“¤ Pushing Docker Image to Docker Hub..."
                    withDockerRegistry([credentialsId: 'docker-hub-credentials', url: '']) {
                        powershell """
                            echo 'ğŸ”„ Logging in to Docker Hub...'
                            docker login -u mohamedathikr -p qwerty786!A
                            echo 'ğŸš€ Pushing Image: $DOCKER_IMAGE'
                            docker push $DOCKER_IMAGE
                        """
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    echo "ğŸš€ Deploying to Kubernetes..."
                    powershell """
                        kubectl apply -f $K8S_DEPLOYMENT --validate=false
                        kubectl get pods
                    """
                }
            }
        }

        stage('Verify Deployment') {
            steps {
                script {
                    echo "âœ… Verifying Kubernetes Deployment..."
                    powershell """
                        kubectl get pods
                    """
                }
            }
        }
    }
}
